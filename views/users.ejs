    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>

        function updateSentiment(id) {
            $("#u_id").val(id);
        }
        let uTable;
        $(document).ready(function () {

            uTable = $('#uTable').DataTable({
                processing: true,
                "paging": true,
                dom: "<'row'<'col-sm-12'tr>>" + "<'row'<'col-sm-4'i><'col-sm-8'<'float-right p-2'p>>>",
                ajax: {
                    url: "/api/v1/user",
                    // beforeSend: function (request) {
                    //     request.setRequestHeader("access_token", $.cookie("access_token"));
                    // },
                    dataFilter: data => {
                        let json = JSON.parse(data);
                        json.recordsTotal = json.total;
                        json.recordsFiltered = json.total;
                        return JSON.stringify(json);
                    },
                    data: function (d) {
                        return $.extend({}, { start: d.start, limit: d.limit, total: d.length });
                    }
                },
                columns: [
                    {
                        data: null,
                        render: d => `${d.name || "N / A"}`
                    },
                    {
                        data: null,
                        render: d => `${d.gender || "N / A"}`
                    },
                    {
                        data: "phone"
                    },
                    {
                        data: "gothra"
                    },
                    {
                        data: "created_at"
                    },
                    {
                        data: null,
                        className: "sentiment",
                        render: d => {
                            return `<button class="btn btn-dark" data-toggle="modal" data-target="#mdlSentiment" onclick="updateSentiment('${d._id}')"><i class="fa fa-user"></i></button>
                            <button class="btn btn-dark" data-toggle="modal" data-target="#mdlSentiment" onclick="updateSentiment('${d._id}')"><i class="fa fa-remove"></i></button>
                            `;
                        }
                    }
                ]

            });

        });

    </script>

